<h1>New game</h1>

<div class="container">
<% @letters.each do |letter| %>
  <div class="box"><p><%= letter %></p></div>
<%end%>
</div>

<p><%= @flats %> </p>

<p>What is the logest word you can find?</p>

<form action="/score" method="post">
  <input type="text" name="word">
  <input type="hidden" value= "<%= @letters.join%>" id="letters" name="letters">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
